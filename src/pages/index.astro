---
import SplashAthletes from "~/components/splash-athletes.astro";
import SplashPlayer from "~/components/splash-player.astro";
import "~/styles/index.css";

const { generator, site } = Astro;

const description =
  "Build fast websites, faster. Astro is a new kind of site builder for the modern web. Lightning-fast performance meets powerful developer experience.";
---

<!doctype html>
<html
  lang="en"
  class="h-full font-roboto motion-safe:scroll-smooth"
  data-theme="dark"
>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <meta name="generator" content={generator} />
    <title>Astro Landing Page</title>
    <meta name="description" content={description} />

    <!-- initialize theme -->
  </head>
  <body
    class="h-full overflow-x-hidden bg-default text-default text-base"
  >
    <SplashAthletes />
    <SplashPlayer />
  </body>
</html>
